<h2>User info</h2>
<%= attachment_image_tag current_user, :profile_image, :fill, 63, 63, fallback: "no_image1.jpg" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>
<%= link_to "" , edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>