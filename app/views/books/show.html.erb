<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">

    <!--User info表示フォーム-->
    <div class="col-md-3">
      <%= render 'users/info' %>

      <!--bookの新規登録フォーム-->
      <%= render 'books/create', newbook: @newbook %>
    </div>

    <!--Books一覧フォーム-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image2.jpg" %>
                <br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm:"本当に消しますか？"}, class:"btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>